<%= render "shared/header" %>
<div class='main'>

  <%# 画面上部の「人生を変える食事管理アプリ」帯部分 %>
  <div class='title-contents'>
    <h2 class='service-title'>
      大きくなれる食事管理アプリ
    </h2>
    <p class='service-explain'>
      BulkUpは筋力アップのために必要なレシピを誰でも投稿できるアプリです。
    </p>
  </div>
  <%# /画面上部の「人生を変える食事管理アプリ」帯部分  %>


  <%# レシピ一覧 %>
  <div class='item-contents'>
    <h2 class='title'>レシピ一覧</h2>
    <%= link_to '新規レシピ商品', "#", class: "subtitle" %>
    <ul class='item-lists'>
      <li class='list'>
        <%= link_to "#" do %>
        <div class='item-img-content'>
          <%= image_tag "recipe-sample.jpg", class: "item-img" %>
        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= "レシピ名" %>
          </h3>
          <div class='item-price'>
            <span><%= "販売価格" %>円<br><%= '配送料負担' %></span>
            <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>
        <% end %>
      </li>
 
      <%# レシピがない場合は以下のダミー商品が表示されるようにしましょう %>
      <%# 商品がある場合は表示されないようにしましょう %>
      <li class='list'>
        <%= link_to '#' do %>
        <%= image_tag "https://tech-master.s3.amazonaws.com/uploads/curriculums/images/Rails1-4/sample.jpg", class: "item-img" %>
        <div class='item-info'>
          <h3 class='item-name'>
            レシピを投稿してね！
          </h3>
          <div class='item-price'>
            <span>99999999円<br>(税込み)</span>
            <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>
        <% end %>
      </li>
      <%# //商品がある場合は表示されないようにしましょう %>
      <%# //商品がない場合は以下のダミー商品が表示されるようにしましょう %>
    </ul>
  </div>
  <%# /商品一覧 %>
</div>
<%= link_to(new_recipe_path, class: 'purchase-btn') do %>
  <span class='purchase-btn-text'>投稿する</span>
  <%= image_tag 'icon_camera.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>
<%= render "shared/footer" %>