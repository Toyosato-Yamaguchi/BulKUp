<%= render "shared/header" %>

<div class='main'>

  <%# 画面上部の「人生を変える食事管理アプリ」帯部分 %>
  <div class='title-contents'>
    <h2 class='service-title'>
      大きくなれる食事管理アプリ
    </h2>
    <p class='service-explain'>
      BulkUpは筋力アップのために必要なレシピを誰でも投稿できるアプリです。
    </p>
  </div>
  <%# /画面上部の「人生を変える食事管理アプリ」帯部分  %>


  <%# レシピ一覧 %>
  <div class='item-contents'>
    <h2 class='title'>レシピ一覧</h2>
    <%= link_to '新規レシピ商品', "#", class: "subtitle" %>
    <ul class='item-lists'>
      <% @recipes.each do |recipe|%>
      <li class='list'>
        <%= link_to '#' do %>
        <div class='item-img-content'>
          <%= image_tag recipe.image, class: "item-img" %>
        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= recipe.recipe_name %>
          </h3>
          <div class='item-price'>
            <span><%= recipe.user.nickname %><br>調理時間 <%= recipe.cooking_time.name %></span>
            <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>
        <% end %>
      </li>
      <% end %>
      <%# レシピがない場合は以下のダミー商品が表示されるようにしましょう %>
      <%if @recipes.blank?%>
      <li class='list'>
        <%= link_to(new_recipe_path) do %>
        <%= image_tag "recipe-sample.jpg", class: "item-img" %>
        <div class='item-info'>
          <h3 class='item-name'>
            レシピを投稿してね！
          </h3>
          <div class='item-price'>
            <span>BulkUp</span>
            <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
  <%# /商品一覧 %>
</div>

<%= link_to(new_recipe_path, class: 'purchase-btn') do %>
  <span class='purchase-btn-text'>投稿する</span>
  <%= image_tag 'icon_camera.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>

<%= render "shared/footer" %>